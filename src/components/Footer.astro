---
import "../styles/styles.css";
---

<div class="footer_grid">
  <div class="container">
    <h3>Book et møde</h3>

    <form>
      <div class="form-group">
        <input type="text" id="name" name="name" required placeholder="Navn" />
      </div>

      <div class="form-group">
        <input type="email" id="email" name="email" required placeholder="E-mail" />
      </div>

      <div class="form-group">
        <textarea id="message" name="message" required placeholder="Besked"></textarea>
      </div>

      <input type="submit" value="Send" />
    </form>
  </div>

  <div class="some">
    <h3>Følg med</h3>

    <div class="some_grid">
      <div>
        <img src="img/instagram.svg" alt="Instagram" class="insta" />
      </div>
      <div>
        <img src="img/linkedin.svg" alt="Linked In" class="linkedin" />
      </div>
      <div>
        <img src="img/facebook.svg" alt="facebook" class="facebook" />
      </div>
    </div>
  </div>
</div>

<style>
  .footer_grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    padding: 100px 40px;

    background-color: var(--background-color);

    color: var(--text-color-footer);
    padding-bottom: 100px;
  }

  div.some {
    width: 40%;
  }

  .container {
    max-width: 563px;
    margin-left: 100px;
  }
  h2 {
    text-align: center;
  }
  .form-group {
    margin-bottom: 20px;
    margin-top: 30px;
  }
  label {
    display: block;
    font-weight: bold;
  }
  input[type="text"],
  input[type="email"],
  textarea {
    width: 100%;
    padding: 10px;
    color: var(--text-color-footer);
    box-sizing: border-box;
    background-color: var(--background-color);
    border: 1px solid var(--text-color-footer);
  }
  textarea {
    height: 100px;
  }

  input[type="submit"] {
    width: 20%;
    padding: 10px;
    border: none;
    background-color: var(--text-color-footer);
    color: var(--background-color);
    cursor: pointer;
  }
  input[type="submit"]:hover {
    color: var(--text-color-footer);
    background-color: var(--background-color);
    border: 1px solid var(--text-color-footer);
    font-weight: bold;
  }

  .some_grid {
    display: flex;
    gap: 5px;
    max-width: 100%;
    margin-top: 20px;
  }

  .some {
    margin-left: 125px;
  }

  .insta {
    width: 60px;
    margin: 0;
  }

  .linkedin {
    margin: 5px;
    width: 50px;
  }

  .facebook {
    width: 54px;
    padding-top: 2px;
  }

  input,
  textarea {
    font-family: "Helvetica Neue Light";
    font-size: 1rem;
    text-transform: uppercase;
    color: var(--text-color-footer);
    letter-spacing: 0.02rem;
  }

  @media (max-width: 768px) {
    .footer_grid {
      display: unset;
    }

    .container,
    .some {
      margin-left: 0;
    }

    .some {
      margin: 80px 0;
    }

    .some_grid {
      margin-top: 20px;
    }
  }
</style>
