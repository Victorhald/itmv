<style>
  /* Andre samarbejder */

  .samarbejder {
    margin-top: 10%;
  }

  .samarbejde_grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    margin: 15px 140px;
    gap: 50px;
  }

  .samarbejde_div {
    position: relative;
    overflow: hidden;
  }

  .samarbejde_div img {
    display: block;
    width: 100%;
    height: auto;
    transition: transform 0.3s ease;
  }

  .samarbejde_div span {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(240, 240, 236, 0.653);
    color: var(--text-color);
    text-align: center;
    padding: 10px;
    transform: translateY(100%);
    transition: transform 0.3s ease;
    font-family: "Helvetica Neue Thin";
    font-size: 1.3rem;
    line-height: 30px;
  }

  .samarbejde_div:hover img {
    transform: scale(1.1);
  }

  .samarbejde_div:hover span {
    transform: translateY(0);
  }
</style>
