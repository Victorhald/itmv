<div class="progress-container">
  <div class="progress-bar" id="myBar"></div>
</div>

<style>
  .progress-container {
    width: 100%;
    height: 8px;
    background-color: #f1f1f1; /* Vælg kun én baggrundsfarve */
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000; /* Øg z-index for at sikre synlighed */
    overflow: hidden;
  }

  .progress-bar {
    height: 8px;
    background: var(--logo-color); /* Sørg for, at denne variabel er defineret i dine styles */
    width: 0%;
  }
</style>

<script>
  window.onscroll = function () {
    myFunction();
  };

  function myFunction() {
    var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
    var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    var scrolled = (winScroll / height) * 100;
    document.querySelector(".progress-bar").style.width = scrolled + "%";
  }
</script>
